{
  "name": "db",
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:drizzle-migrate && pnpm dev:drizzle-studio",
    "dev:caddy": "pnpm dev:drizzle-migrate && pnpm dev:drizzle-studio",
    "generate:sql": "dotenvx run -- drizzle-kit generate --config=drizzle.config.prod.ts",
    "preprod:migrate": "read -p 'did you run test:prod:migrate first?(Yes/any) ' answer && [ \"$answer\" = \"Yes\" ] || { echo 'Exiting...'; exit 1; } && pnpm test:prod:migrate",
    "prod:migrate": "dotenvx run -f .env.production -- drizzle-kit migrate --config=drizzle.config.prod.ts",
    "test:prod:migrate": "dotenvx run -f .env.turso-migration -- tsx ./db/migrationTest.ts",
    "dev:drizzle-studio": "dotenvx run -- drizzle-kit studio --port=7022 --config=./drizzle.config.ts",
    "dev:drizzle-migrate": "dotenvx run -- drizzle-kit migrate --config=./drizzle.config.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.32.0",
    "@libsql/client": "^0.14.0",
    "@libsql/linux-x64-gnu": "0.5.0",
    "@libsql/darwin-arm64": "0.5.0",
    "@types/node": "^22.10.1",
    "drizzle-kit": "^0.29.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "zod": "^3.23.8",
    "typescript": "^5.7.2",
    "lib": "workspace:*"
  }
}