---
import StoreCard from "./StoreCard.astro";

interface Props {
	stores: Array<{
		id: string;
		name: string;
		address1: string | null;
		distance: number;
		[key: string]: any;
	}>;
	measure: string | undefined;
	type: string | undefined;
}

const { stores, measure = "km", type = "delivery" } = Astro.props;
---

<div class="mb-4 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
	{stores.map((store) => <StoreCard store={store} measure={measure} type={type} />)}
</div>
