---
import "../styles/global.css";
import LayoutHelpers from "ui-shadcn-vue/src/ui-plus/LayoutHelpers.vue";
import { Card } from "@/components/ui/card";
import { BASE_LINKS } from "@web-astro/clientScripts/links";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<!-- dark mode helper -->
		<script is:inline>
			const getThemePreference = () => {
				if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
					return localStorage.getItem("theme");
				}
				return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
			};
			const isDark = getThemePreference() === "dark";
			document.documentElement.classList[isDark ? "add" : "remove"]("dark");

			if (typeof localStorage !== "undefined") {
				const observer = new MutationObserver(() => {
					const isDark = document.documentElement.classList.contains("dark");
					localStorage.setItem("theme", isDark ? "dark" : "light");
				});
				observer.observe(document.documentElement, { attributes: true, attributeFilter: ["class"] });
			}
		</script>
		<meta charset="utf-8" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="color-scheme" content="light dark" />
		<meta
			name="viewport"
			content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"
		/>
		<meta name="msapplication-tap-highlight" content="no" />

		<!-- add to homescreen for ios -->
		<meta name="apple-mobile-web-app-title" content="Dashboard" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	</head>

	<body>
		<div class="container mx-auto p-2 lg:p-6">
			<!-- Header -->
			<Card class="sticky top-0 z-50 shadow-sm">
				<div class="container mx-auto flex items-center justify-between px-4 py-4">
					<div class="flex items-center">
						<a href={BASE_LINKS.HOME} class="mr-8 text-2xl font-bold">{Astro.locals.WEBSITE?.name}</a>
						<!-- <nav class="hidden space-x-6 md:flex">
						<a href="#" class="text-foreground/70 hover:text-foreground">Restaurants</a>
						<a href="#" class="text-foreground/70 hover:text-foreground">Delivery</a>
						<a href="#" class="text-foreground/70 hover:text-foreground">Pickup</a>
						<a href="#" class="text-foreground/70 hover:text-foreground">About</a>
					</nav> -->
					</div>
					<!-- <div class="flex items-center space-x-4">
					<button class="text-foreground/70 hover:bg-muted hidden rounded-full px-4 py-2 md:block">Log in</button>
					<button class="bg-primary text-primary-foreground hover:bg-primary/90 rounded-full px-4 py-2">Sign up</button>
				</div> -->
				</div>
			</Card>
			<slot />
		</div>
		<details class="m-8 mx-auto w-fit text-xs">
			<summary>⚙️</summary>
			<div>
				cache:
				<span class="cache-date" data-cache-date={Date.now()}></span>
				<br />
				GIT: {globalThis?.SENTRY_RELEASE?.id}
				<br />
				websiteId:{Astro.locals.WEBSITE?.id}
			</div>
		</details>
		<script src="../clientScripts/cacheFormat.ts"></script>
		<LayoutHelpers client:load />
	</body>
</html>
