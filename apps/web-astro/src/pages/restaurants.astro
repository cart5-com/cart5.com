---
import BaseLayout from "../layout/BaseLayout.astro";
import { getNearbyRestaurants_Service } from "@db/services/distance.service";
import FilterControls from "../components/restaurants/FilterControls.astro";
import RestaurantList from "../components/restaurants/RestaurantList.astro";
import Pagination from "../components/restaurants/Pagination.astro";
import { BASE_LINKS } from "@web-astro/utils/links";
import { slugify } from "@lib/utils/slugify";
type params = Parameters<typeof getNearbyRestaurants_Service>;
const lat = Number(Astro.url.searchParams.get("lat"));
const lng = Number(Astro.url.searchParams.get("lng"));
const address = Astro.url.searchParams.get("address") || "address";
// const country = Astro.url.searchParams.get("country");
const measure = (Astro.url.searchParams.get("measure") ?? "km") as params[3];
const type = (Astro.url.searchParams.get("type") ?? "delivery") as params[7];
const sort = (Astro.url.searchParams.get("sort") ?? "distance_asc") as params[8];
const limit = Number(Astro.url.searchParams.get("limit") ?? 36);
const currentPage = Number(Astro.url.searchParams.get("page") ?? 1);
const range = Number(Astro.url.searchParams.get("range") ?? 20); // 20 km
// const listAllParams = Object.fromEntries(Astro.url.searchParams.entries());

const nearbyRestaurants = await getNearbyRestaurants_Service(
	lat,
	lng,
	Astro.locals.WEBSITE?.isMarketplace ? null : Astro.locals.WEBSITE?.id,
	measure,
	limit,
	currentPage,
	range,
	type,
	sort
);

if (nearbyRestaurants.restaurants.length === 1) {
	const restaurantLink = BASE_LINKS.RESTAURANT(
		nearbyRestaurants.restaurants[0].id,
		slugify(nearbyRestaurants.restaurants[0].name)
	);
	return Astro.redirect(restaurantLink);
}

const createPageUrl = (
	pageNum: number,
	type: string | undefined = undefined,
	sort: string | undefined = undefined,
	range: number | undefined = undefined
) => {
	const url = new URL(Astro.url);
	url.searchParams.set("page", pageNum.toString());
	if (type) url.searchParams.set("type", type);
	if (sort) url.searchParams.set("sort", sort);
	if (range) url.searchParams.set("range", range.toString());
	return url.toString();
};
---

<BaseLayout title={Astro.locals.WEBSITE?.name ?? "List"}>
	<FilterControls type={type} address={address} sort={sort} range={range} createPageUrl={createPageUrl} />

	<RestaurantList restaurants={nearbyRestaurants.restaurants} measure={measure} type={type} />

	<Pagination
		currentPage={currentPage}
		totalPages={nearbyRestaurants.pagination.totalPages}
		createPageUrl={(page: number) => createPageUrl(page)}
	/>
</BaseLayout>
