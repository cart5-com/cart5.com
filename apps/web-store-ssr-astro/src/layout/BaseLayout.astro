		</script>

		<button id="error-button">Throw test error</button>
		<script>
			function handleClick() {
				throw new Error("This is a test error");
			}
			document.querySelector<HTMLButtonElement>("#error-button")?.addEventListener("click", handleClick);
		</script>

		<!-- ACTIONS SAMPLE -->
		<button id="get-greeting-button">Get greeting</button>
		<button id="sample-throw-error-button">Sample throw error</button>
		<script>
			import { actions } from "astro:actions";

			const button = document.querySelector<HTMLButtonElement>("#get-greeting-button");
			button?.addEventListener("click", async () => {
				// Show alert pop-up with greeting from action
				const { data, error } = await actions.getGreeting({ name: "Houston" });
				if (!error) alert(data);
			});

			const button2 = document.querySelector<HTMLButtonElement>("#sample-throw-error-button");
			button2?.addEventListener("click", async () => {
				const { data, error } = await actions.sampleThrowError();
				if (error) {
					console.error(error);
				}
				if (!error) alert(data);
			});
		</script>
	</body>
</html>
